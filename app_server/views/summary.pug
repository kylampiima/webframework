doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Book Information
  link(rel="stylesheet" href="https://bootswatch.com/5/journal/bootstrap.min.css")
  script(src="https://bootswatch.com/_vendor/jquery/dist/jquery.min.js")
  script(src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.bundle.min.js")

  nav.navbar.navbar-expand-lg.bg-primary(data-bs-theme='dark')
    .container-fluid
      a.navbar-brand(href='#') Navbar
      button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarColor01.collapse.navbar-collapse
        ul.navbar-nav.me-auto
          li.nav-item
            a.nav-link.active(href='#')
              | Home
              span.visually-hidden (current)
          li.nav-item
            a.nav-link(href='#') Features
          li.nav-item
            a.nav-link(href='#') Pricing
          li.nav-item
            a.nav-link(href='#') About
        form.d-flex
          input.form-control.me-sm-2(type='search', placeholder='Search')
          button.btn.btn-secondary.my-2.my-sm-0(type='submit') Search

  .row.banner
        .col-12.col-md-8
            h1= pageHeader.title 
                small &nbsp;#{pageHeader.strapline}

.row.banner
  each book in summary 
      .col-12.col-md-4
        .book
        .card.border-primary.mb-3(style='max-width: 20rem;')
          h3.card-header= book.name 
          .card-body
            strong.card-title= book.author
            p.card-text= book.pages
              | pages 
            strong
              | Genre : 
              p=book.genre
            strong
              | Published : 
              p= book.published
            p.card-text= book.description
              

  